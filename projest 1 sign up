import React from 'react'; 

import { useState } from 'react'; 

 
 

export default function  Signup() { 

  const [cPassword, setCPassword] = useState(''); 

  const [cConfirmPassword, setCConfirmPassword] = useState('');

  const [email, setEmail] = useState(''); 

  const [name, setName] = useState('');

  const handlecPasswordChange =(e) => {
    setCPassword(e.target.value);
  }; 

  const handleNameChange =(e) => {
    setName(e.target.value);
  };

  const handleEmailChange =(e) => {
    setEmail(e.target.value);
  };
  const handlecConfirmPasswordChange =(e) => {
    setCConfirmPassword(e.target.value);
  };

  
return ( 


    <div> 
<form>
    <label for="fName"> 

      Full Name:

    </label> 

    <input type="text" value={name} onChange={this.handleNameChange} id='name' placeholder='Full name...'></input>

      
    <label for="custmerEmail"> 

      Email Address:

    </label> 

    <input type="text" value={email} onChange={this.handleEmailChange} id='email' placeholder='Email address will be user name'></input>

    <label for="password"> 

      Password:

    </label> 

    <input type="text" value={cPassword} onChange={this.handlecPasswordChange} id='password' placeholder='Password...'></input>

    <label for="confrimPassword"> 

    Confrim Password:

    </label> 

    <input type="text" value={cConfirmPassword} onChange={this.handlecConfirmPasswordChange} id='ConPas' placeholder='Confirm Password...'></input>


    <button onClick={handleSubmit} className="btn" type="submit">
Submit
</button>



  </form> 
  </div> 

  ); 

} 

